<body class="dashboard">
 	<% if signed_in? %>
		Logged in as <%= current_user.display_name %>
		<%= link_to "Log out", logout_path, :class=>"btn btn-danger" %>
	<% else %>
		<%= link_to "Sign Up", signup_path,  :class=>"btn btn-primary"%> or
		<%= link_to "Log In", login_path, :class=>"btn btn-primary"%>
	<% end %>

<div class="search-form">
		<h2>Search a movie:</h1>
			<form action="/search" method="get">
				<input id="movie" name="movie" type="text" placeholder="Search any movie" />
				<input name="commit" type="submit" value="Search"/>
	 		</form>
</div>
<%= @movies.title %>
</body>